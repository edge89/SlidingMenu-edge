                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/iv_04"
                android:text="第4个item"
                android:textColor="#ffffff"
                android:textSize="20sp" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_slidingmenu_05"
